---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "About Me"; 

const identity = {
  firstName: "iggy",
  country: "spolski",
  occupation: "dev",
  hobbies: ["juggling", "diving", "robotics"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Python", "thinking and writing"];

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<BaseLayout pageTitle={pageTitle}>
  <style is:global define:vars={{ skillColor, fontWeight, textCase }}>
    h1 {
      color: rgb(205, 84, 14);
      font-size: 4rem;
    }

    .skill {
      color: var(--skillColor);
      font-weight: var(--fontWeight);
      text-transform: var(--textCase);
    }
  </style>

  <h2>... let's dive in!</h2>
  <p>I'm Iggy! A passionate adventurer and developer, exploring the world one dive at a time.</p> 

  <p>yay</p>

  <p>Here are a few facts about me:</p>

  <ul>
    <li>My name is {identity.firstName}.</li>
    <li>I come from {identity.country} and I work as a {identity.occupation}.</li>
    {identity.hobbies.length >= 3 && (
      <li>My hobbies are: {identity.hobbies.join(", and ")}.</li> 
    )}
  </ul>

  <p>My skills are:</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>
</BaseLayout>